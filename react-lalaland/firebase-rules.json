{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && ($uid === auth.uid || auth.uid != null)"
      }
    },
    "presence": {
      "$uid": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "groupChats": {
      "$roomId": {
        "messages": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "privateChats": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "messages": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}