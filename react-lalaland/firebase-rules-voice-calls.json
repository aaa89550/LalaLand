{
  "rules": {
    "voiceCalls": {
      "$callId": {
        ".read": "auth != null && (data.child('from').val() == auth.uid || data.child('to').val() == auth.uid)",
        ".write": "auth != null && (data.child('from').val() == auth.uid || data.child('to').val() == auth.uid || !data.exists())",
        ".validate": "newData.hasChildren(['from', 'to', 'type', 'status', 'createdAt'])"
      }
    },
    "privateChats": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['text', 'user', 'from', 'time'])"
          }
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "onlineUsers": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}